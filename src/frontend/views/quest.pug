extends main.pug

include ./mixins.pug

block content
  #quest
    // new form will get sent on script "submitForm" on a new form element
    form(name="forecast")
      .items-container
        - const length = characters.length
        each c in characters
          .item-container
            +characterItem(c, length, formValuesHelper)

      .button-container
        if lastPage
          button#button.custom--button.huge(onclick="gotForecast.formHandler.submitForm(forecast)") submit
        else
          button#button.custom--button.huge(
            onclick=`gotForecast.formHandler.storeAnswers(forecast, ${parseInt(page) +1})`,
            disabled) Next &rarr;
