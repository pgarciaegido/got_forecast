extends main.pug

include ./mixins.pug

block content
  #forecast-results
    button.pure-button(onclick="gotForecast.download.passWholePage()") download pic
    h1 Your forecast!

    .results-table
      .pure-g.header
        .pure-u-1-3.character-info
          p Character
        .pure-u-1-3.character-info
          p Status
        .pure-u-1-3.character-info
          p WhiteWalker?
      each val, character in results
        .pure-g.results
          .pure-u-1-3.character-info
            img(src=`images/${character}.jpg`, style="width: 30px")
            p=val.nameToDisplay
          .pure-u-1-3
            p=val.status
          .pure-u-1-3
            p=val.whitewalker
